    <script>
        window.onload = function () {
            let html = document.getElementsByTagName('html')[0];
            html.style.fontSize = document.body.clientWidth / 10 + 'px';

            var list = document.getElementsByClassName('list')[0];
            var closeBtn = list.getElementsByClassName('iconclose');

            Array.prototype.forEach.call(closeBtn, function (item, index) {
                item.onclick = function () {
                    var list = document.getElementsByClassName('list')[0];
                    var li = list.getElementsByClassName('item');
                    list.removeChild(item.parentNode);
                }
            });



        }
        
    </script>
