<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>
<body>
    



    <script>
        // 单例模式

        // 用单例模式写一个自己的代码库(优点: 外部无法修改的静态变量)
        var constFactory = (function () {
            // 设置静态变量
            var conf = {
                MAX_NUM : 100,
                MIN_NUM : 1,
                COUNT : 1000
            };
            // 暴露接口
            return {
                get : function (name) {
                    return conf[name] ? conf[name] : null;
                }
            }
        })();

        // 获取静态变量
        var count = constFactory.get('COUNT');
        console.log(count); // 1000
        
 
       






    
    </script>

</body>
</html>
